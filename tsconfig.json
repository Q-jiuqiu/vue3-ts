// tsconfig.json是ts编译器的配置我呢见，ts编译器可以根据他的信息来对代码进行编译
{
  // 编译器选项
  "compilerOptions": {
    // 用来指定ts被编译为的ES的版本
    "target": "esnext",
    // 指定使用的模块化的规范
    "module": "esnext",
    // 所有严格检查的总开关
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // 用来指定项目中要使用的库,代码提示，代码检查， 在浏览中执行的化不需要指定
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "ES2020"
    ]
  },
  // 用来指定哪些ts文件需要被编译
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  // 不需要背编译的文件目录
  "exclude": [
    "node_modules"
  ]
}